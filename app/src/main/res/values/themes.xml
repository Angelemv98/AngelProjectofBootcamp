<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AplicationAngel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Angel Styles-->
    <style name="Them_AngelInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">20sp</item>
        <item name="boxCornerRadiusTopStart">20sp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textSize">15sp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">#03A9F4</item>
        <item name="strokeWidth">20sp</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="startIconTint">#F8F4F4</item>
    </style>

    <style name="Them_AngelOptionText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomEnd">20sp</item>
        <item name="boxCornerRadiusTopStart">20sp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textSize">15sp</item>
        <item name="boxStrokeColor">@color/bg_am_input_box</item>
        <item name="hintTextColor">#2196F3</item>
        <item name="strokeWidth">20sp</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="startIconTint">#FFFFFF</item>
    </style>


    <style name="Text">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BackgourndCard">
        <item name="android:background">@drawable/bg_card</item>
    </style>
    <style name="BackgourndCardSecond">
        <item name="android:background">@drawable/bg_cardtwo</item>
    </style>

    <style name="Them_AngelTextInputEditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>