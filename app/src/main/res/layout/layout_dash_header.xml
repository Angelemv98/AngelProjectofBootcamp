<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#615E5E"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/imlogo"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:src="@drawable/im_am" />
    <TextView
        android:id="@+id/idUserNameF"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User: "
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/idUserNameC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imlogo"
        android:layout_toEndOf="@+id/idUserNameF"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Angelemv98" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imlogo"
        android:layout_marginLeft="110sp"
        android:layout_toEndOf="@+id/idUserNameC"
        android:text="Estado: "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/statusactive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imlogo"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/status"
        android:text="Activo"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginTop="10sp"
        android:id="@+id/idEmailF"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/idUserNameF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/idEmailC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idUserNameF"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@+id/idEmailF"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="elianec13@gmial.com" />
    <TextView
        android:layout_marginTop="10sp"
        android:id="@+id/tvNameUser"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/idEmailF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvNameUserHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idEmailC"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@+id/tvNameUser"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Angel Ernesto" />
</RelativeLayout>